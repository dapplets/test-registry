{
  "name": "dapplet-registry",
  "version": "0.1.0",
  "description": "Test Dapplet Registry",
  "main": "src/app.js",
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "start:watch": "nodemon",
    "build": "tsc",
    "test": "mocha -r ts-node/register ./test/index.ts",
    "test:watch": "mocha -r ts-node/register --watch ./test/index.ts --watch-extensions ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dapplets/dapplet-registry.git"
  },
  "keywords": [
    "dapplets",
    "registry"
  ],
  "author": "Dapplets Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dapplets/dapplet-registry/issues"
  },
  "homepage": "https://github.com/dapplets/dapplet-registry#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "ethers": "^5.0.13",
    "express": "^4.17.1",
    "minio": "^7.0.16",
    "multer": "^1.4.2",
    "node-fetch": "^2.6.1",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/minio": "^7.0.6",
    "@types/mocha": "^7.0.2",
    "@types/multer": "^1.4.4",
    "@types/node-fetch": "^2.5.7",
    "@types/supertest": "^2.0.10",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "dotenv": "^8.2.0",
    "mocha": "^7.2.0",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
